<!DOCTYPE html>
<html>
<head>
	<title> <%= title %> </title>
	<%= render 'layouts/stylesheets' %>


  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<%= render 'layouts/header' %>
		<section class="round" >
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
			<h1>this is the modal page</h1>
		</section>
		<%= link_to "Sign up now!", signup_path, :class => "signup_button round", :id => "signup_button_id" %>


		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
